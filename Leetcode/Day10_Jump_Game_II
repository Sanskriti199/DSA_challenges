class Solution {
public:
    int jump(vector<int>& nums) {
        int n=nums.size();
        if(n<=1){
            return 0;
        }

        int a=0;
        int b=0;
        int c=0;

        for(int i=0;i<n-1;++i){

            c=max(c,i+nums[i]);

            if(i==b){
                a++;
            b=c;
            }
        }
        return a;
    }
};
