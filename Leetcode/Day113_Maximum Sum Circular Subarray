class Solution {
public:
    int maxSubarraySumCircular(vector<int>& nums) {
        const int INF = 1 << 30;
        int pmi = 0, pmx = -INF;
        int ans = -INF, s = 0, smi = INF;
        for (int x : nums) {
            s += x;
            ans = max(ans, s - pmi);
            smi = min(smi, s - pmx);
            pmi = min(pmi, s);
            pmx = max(pmx, s);
        }
        return max(ans, s - smi);
        }
};
