class Solution {
public:
    bool canConstruct(string ransomNote, string magazine) {
        vector<int> counts(26, 0);

        for (char c : magazine) {
            counts[c - 'a']++;
        }

        for (char c : ransomNote) {
            int index = c - 'a';
            
            if (counts[index] == 0) {
                return false;
            }
            
            counts[index]--;
        }

        return true;
    }
};
