class Solution {
public:
 public:
    bool isAnagram(string s, string t) {
        if (s.length() != t.length()) {
            return false;
        }
        
        vector<int> counts(26, 0);

        for (char c : s) {
            counts[c - 'a']++;
        }

        for (char c : t) {
            counts[c - 'a']--;
        }

        for (int count : counts) {
            if (count != 0) {
                return false;
            }
        }

        return true;
    }
};
