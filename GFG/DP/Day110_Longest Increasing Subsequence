class Solution {
  public:
    int lis(vector<int>& arr) {
        // code here
        if(arr.empty())return 0;
        
        vector<int>tails;
        
        for(int x:arr){
            auto it=lower_bound(tails.begin(), tails.end(),x);
            
            if(it==tails.end()){
                tails.push_back(x);
            }
            else{
                *it=x;
            }
        }
        return tails.size();
    }
};
