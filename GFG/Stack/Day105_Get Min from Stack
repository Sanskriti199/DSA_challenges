class SpecialStack {
    int*stack;
    int* minStack;
    int topIdx;
    int capacity;
  public:
    SpecialStack() {
        // Define Stack
        capacity=100001;
        stack=new int[capacity];
        minStack= new int[capacity];
        topIdx=-1;
    }

    void push(int x) {
        // Add an element to the top of Stack
        if(topIdx==capacity-1)return;
        
        topIdx++;
        stack[topIdx]=x;
        
        if(topIdx==0){
            minStack[topIdx]=x;
        }
        else{
            int currentMin=minStack[topIdx-1];
            minStack[topIdx]=(x<currentMin)?x: currentMin;
        }
    }

    void pop() {
        // Remove the top element from the Stack
        if(topIdx!=-1){
            topIdx--;
        }
    }

    int peek() {
        // Returns top element of the Stack
        if(topIdx==-1)
        return -1;
        return stack[topIdx];
    }

    bool isEmpty() {
        // Check if stack is empty
        return topIdx==-1;
    }

    int getMin() {
        // Finds minimum element of Stack
        if(topIdx==-1)return -1;
        return minStack[topIdx];
    }
    ~SpecialStack(){
        delete[]stack;
        delete[]minStack;
    }
};
