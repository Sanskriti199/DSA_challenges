class Solution {
  public:
    void sort012(vector<int>& arr) {
        // code here
        int a=arr.size();
        
        int b=0;
        int c=a-1;
        int mid=0;
        
        while(mid<=c){
            if(arr[mid]==0){
                
                swap(arr[b++],arr[mid++]);
            }
            else if(arr[mid]==1){
                mid++;
            }
            else{
                swap(arr[mid],arr[c--]);
            }
        }
    }
};
